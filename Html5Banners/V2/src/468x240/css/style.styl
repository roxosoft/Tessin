@import 'normalize.styl';

.b-logo {
  background-image: url('logo.png');
  background-size: contain;
  background-position: center center;
  background-repeat: no-repeat;
  height: 27px;
  width: 88px;
}

.b-banner {
  font-family: font, Segoe UI, sans-serif;
  width: 468px;
  height: 240px;
  background: rgba(255, 255, 255, 1);
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-repeat: no-repeat;
  background-size: contain;
  background-position: bottom center;
  color: rgba(80, 80, 80, 1);
  font-size: 14px;
  font-weight: 700;
  line-height: 18px;
  text-decoration: none;
  box-sizing: border-box;
  cursor: pointer;

  &>* {
    text-decoration: none;
  }


}

.b-header {
  font-size: 135%;
  font-weight: 300;

  b {
    font-weight: 700;
  }
}


.b-text {
  color: #606060;
  font-size: 14px;

  span {
    display: block;
    color: rgba(15, 173, 140, 1);
    font-weight: bold;
    text-transform: uppercase;
  }

  &._small {
    font-size: 12px;
    font-weight: 400;
    color: #676767;
  }
}

.b-button {
  background-color: rgba(133, 74, 213, 1);
  cursor: pointer;
  text-transform: uppercase;
  color: white;
  height: 36px;
  line-height: 36px;
  text-align: center;
  width: 145px;
  font-weight: 400;

  transition: .1s all ease-in-out;

  &:hover {
    background-color: darken(rgba(133, 74, 213, 1), 10);
  }
}

.b-left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  margin-left: 24px;
  padding-top: 20px;
  padding-bottom: 7px;
  box-sizing: border-box;
}

.b-illustration {
  position: relative;
  overflow: hidden;
  height: 100%;
  width: fit-content;

  .back {
    height: 240px;
    width: 186px;
    object-fit: cover;
  }

  .stroke {
    position: absolute;
    top: 0;
    left: 0;
  }
}