#tessin-banner {

  .b-logo {
    background-image: url('logo.svg');
    background-size: contain;
    background-position: center center;
    background-repeat: no-repeat;
    height: 48px;
    width: 66px;
  }

  .b-banner {
    font-family: font, Segoe UI, sans-serif;
    width: 300px;
    height: 250px;
    background: rgba(255, 255, 255, 1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: bottom center;
    color: rgba(80, 80, 80, 1);
    font-size: 14px;
    font-weight: 700;
    line-height: 18px;
    text-decoration: none;
    box-sizing: border-box;
    cursor: pointer;

    margin: 0;
    * {
      box-sizing: border-box;
    }

    & > * {
      text-decoration: none;
    }

  }

  .b-header {
    font-size: 22px;
    font-weight: 300;
    margin-top: 19px;
    padding-left: 14px;
    b {
      font-weight: 700;
    }
  }

  .b-text {
    font-size: 12px;
    color: #717073;
    font-weight: bold;
    padding-left: 14px;
  }

  .b-text-just {
    font-size: 15px;
    font-weight: 400;
    position: relative;
    top: 22px;
    z-index: 1;
    color: #676767;

    span {
      font-size: 12px;
      display: block;
      color: rgba(15, 173, 140, 1);
      font-weight: bold;
      text-transform: uppercase;
    }
  }

  .b-button {
    background-color: rgba(133, 74, 213, 1);
    cursor: pointer;
    text-transform: uppercase;
    color: white;
    height: 36px;
    line-height: 36px;
    text-align: center;
    width: 145px;
    font-weight: 400;
    margin-top: 24px;
    margin-left: 14px;

    transition: .1s all ease-in-out;

    &:hover {
      background-color: darken(rgba(133, 74, 213, 1), 10);
    }
  }

  .b-desc {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    padding-right: 14px;
    padding-left: 14px;
    box-sizing: border-box;
  }

  .b-illustration {
    position: relative;
    overflow: visible;
    height: 57px;
    width: 100%;

    .back {
      height: 57px;
      width: 300px;
      object-fit: cover;
      object-position: 0 5px;
    }

    .stroke {
      position: absolute;
      top: 0;
      left: 0;
    }
  }

}